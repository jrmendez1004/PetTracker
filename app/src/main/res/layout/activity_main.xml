<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <Button
        android:id="@+id/btnSwitchCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Weekly View" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCalSunday"
        android:layout_width="57dp"
        android:layout_height="300dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/tvCalView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSwitchCal"
        tools:text="Today/This week" />

    <ImageView
        android:id="@+id/ivAddTask"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvCalView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDogList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvCalSunday" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCalMonday"
        android:layout_width="57dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toEndOf="@+id/rvCalSunday"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCalTuesday"
        android:layout_width="57dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toEndOf="@+id/rvCalMonday"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCalWednesday"
        android:layout_width="57dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toEndOf="@+id/rvCalTuesday"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCalThursday"
        android:layout_width="57dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toEndOf="@+id/rvCalWednesday"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCalFriday"
        android:layout_width="57dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toEndOf="@+id/rvCalThursday"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCalSaturday"
        android:layout_width="57dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toEndOf="@+id/rvCalFriday"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunday"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCalView" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/rvCalSunday"
        app:layout_constraintTop_toBottomOf="@+id/tvCalView" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuesday"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/rvCalMonday"
        app:layout_constraintTop_toTopOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/rvCalTuesday"
        app:layout_constraintTop_toBottomOf="@+id/tvCalView" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thursday"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/rvCalWednesday"
        app:layout_constraintTop_toBottomOf="@+id/tvCalView" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/rvCalThursday"
        app:layout_constraintTop_toBottomOf="@+id/tvCalView" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saturday"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/rvCalFriday"
        app:layout_constraintTop_toBottomOf="@+id/tvCalView" />

</androidx.constraintlayout.widget.ConstraintLayout>